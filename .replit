modules = ["web", "python-3.11", "nodejs-20"]
[agent]
expertMode = true
integrations = ["stripe:2.0.0"]

[nix]
channel = "stable-25_05"
packages = ["chromium", "flutter"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flutter Web Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Express API Server"

[[workflows.workflow]]
name = "Flutter Web Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python server.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Express API Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd server && npm run dev"
waitForPort = 3000

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "static"
build = ["flutter", "build", "web"]
publicDir = "build/web"
