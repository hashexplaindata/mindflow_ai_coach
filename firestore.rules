rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Customers collection: Only the user can read their own document
    // Only the backend function (admin SDK) or user can write
    match /customers/{uid} {
      allow read: if request.auth != null && request.auth.uid == uid;
      allow write: if false; // Only written by Cloud Functions (Admin SDK)
    }
    
    // Allow read/write for authenticated users to their own subcollections
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
